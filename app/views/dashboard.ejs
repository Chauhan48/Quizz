<!DOCTYPE html>
<html>
<head>
  <title> Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f5f5f5; }
    h1 { text-align: center; margin-bottom: 30px; }
    .dashboard-container {
      max-width: 900px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
    }
    .section {
      margin-bottom: 40px;
    }
    .level {
      font-size: 1.5rem;
      font-weight: bold;
      color: #4CAF50;
    }
    .chart-placeholder {
      height: 200px;
      background: #ddd;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #666;
      font-style: italic;
    }
    ul.weak-areas-list {
      list-style: none;
      padding-left: 0;
    }
    ul.weak-areas-list li {
      line-height: 1.6;
      font-weight: 600;
      color: #c0392b;
    }

    /* Styles for Take Test button and options */
    #take-test-btn {
      display: block;
      margin: 20px auto;
      padding: 15px 30px;
      background-color: #3498db;
      color: #fff;
      font-size: 1.2rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    #take-test-btn:hover {
      background-color: #2980b9;
    }

    #test-options {
      display: none; /* initially hidden */
      text-align: center;
      margin-top: 20px;
    }
    #test-options button {
      margin: 0 10px;
      padding: 10px 20px;
      font-size: 1rem;
      cursor: pointer;
      border: 1px solid #3498db;
      background-color: white;
      color: #3498db;
      border-radius: 4px;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    #test-options button:hover {
      background-color: #3498db;
      color: white;
    }
    #quiz-container {
      display: none; /* hidden initially */
      margin-top: 30px;
      background: #fafafa;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    #quiz-container h3 {
      margin-bottom: 20px;
    }
    .question-block {
      margin-bottom: 25px;
    }
    .question-block p {
      margin: 0 0 8px 0;
      font-weight: 600;
    }
    .option {
      margin-left: 20px;
      margin-bottom: 4px;
    }
  </style>
</head>
<body>
  <% 
    level = typeof level !== 'undefined' ? level : 'Beginner'; 
    weakAreas = typeof weakAreas !== 'undefined' ? weakAreas : [];
  %>

  <div class="dashboard-container">
    <h1>Dashboard</h1>

    <div class="section">
      <h2>Current Level</h2>
      <p class="level"><%= level %></p>
    </div>

    <div class="section">
      <h2>Score Trends</h2>
      <div id="score-chart" class="chart-placeholder">Score Trend Chart Here</div>
      <!-- Integrate Chart.js or other JS chart library to render actual chart -->
    </div>

    <div class="section">
      <h2>Weak Areas</h2>
      <% if (weakAreas.length > 0) { %>
        <ul class="weak-areas-list">
          <% weakAreas.forEach(function(area) { %>
            <li><%= area %></li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No weak areas detected yet. Great job!</p>
      <% } %>
    </div>

    <button id="take-test-btn">Take Test</button>

    <div id="test-options">
      <button onclick="startTest('Easy')">Easy</button>
      <button onclick="startTest('Medium')">Medium</button>
      <button onclick="startTest('Hard')">Hard</button>
    </div>
  </div>

    <div id="quiz-container">
      <h3>Quiz: <span id="quiz-level"></span> Level</h3>
      <div id="questions-list"></div>
      <!-- Add submit button or quiz controls as needed -->
    </div>
  </div>

  <script>
    const takeTestBtn = document.getElementById('take-test-btn');
    const testOptions = document.getElementById('test-options');
    const quizContainer = document.getElementById('quiz-container');
    const quizLevelSpan = document.getElementById('quiz-level');
    const questionsList = document.getElementById('questions-list');

    takeTestBtn.addEventListener('click', () => {
      testOptions.style.display = 'block';
      takeTestBtn.style.display = 'none';
    });

    function startTest(level) {
      const ready = confirm('Test is going to start. Are you ready?');
      if (!ready) return;

      // Redirect to new test page with difficulty as URL param
      window.location.href = `/test/${level.toLowerCase()}`;
    }

  </script>
</body>
</html>