<!DOCTYPE html>
<html>
<head>
  <title>Student Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f5f5f5; }
    h1 { text-align: center; margin-bottom: 30px; }
    .dashboard-container {
      max-width: 900px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
    }
    .section {
      margin-bottom: 40px;
    }
    .level {
      font-size: 1.5rem;
      font-weight: bold;
      color: #4CAF50;
    }
    .chart-placeholder {
      height: 200px;
      background: #ddd;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #666;
      font-style: italic;
    }
    ul.weak-areas-list {
      list-style: none;
      padding-left: 0;
    }
    ul.weak-areas-list li {
      line-height: 1.6;
      font-weight: 600;
      color: #c0392b;
    }
  </style>
</head>
<body>
  <% 
    level = typeof level !== 'undefined' ? level : 'Beginner'; 
    weakAreas = typeof weakAreas !== 'undefined' ? weakAreas : [];
  %>

  <div class="dashboard-container">
    <h1>Student Dashboard</h1>

    <div class="section">
      <h2>Current Level</h2>
      <p class="level"><%= typeof level !== 'undefined' ? level : 'Beginner' %></p>
    </div>

    <div class="section">
      <h2>Score Trends</h2>
      <div id="score-chart" class="chart-placeholder">Score Trend Chart Here</div>
      <!-- You can integrate Chart.js or other JS chart library to render actual chart -->
    </div>

    <div class="section">
      <h2>Weak Areas</h2>
      <% if (weakAreas.length > 0) { %>
        <ul class="weak-areas-list">
          <% weakAreas.forEach(function(area) { %>
            <li><%= area %></li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No weak areas detected yet. Great job!</p>
      <% } %>
    </div>
  </div>
</body>
</html>
